{
  "name": "renovate-config-bitworkers",
  "version": "0.0.0-semantically-released",
  "description": "Renovate configuration for Bitworkers",
  "main": "package.json",
  "scripts": {
    "semantic-release": "semantic-release"
  },
  "keywords": [
    "renovate-config"
  ],
  "author": "Bitworkers",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bitworkers-official/renovate-config-bitworkers.git"
  },
  "devDependencies": {
    "semantic-release": "^15.13.3"
  },
  "renovate-config": {
    "default": {
      "extends": [
        "config:base",
        "default:skipStatusChecks",
        "default:timezone(Europe/Berlin)"
      ],
      "automerge": true,
      "pinVersions": false,
      "prConcurrentLimit": 1,
      "schedule": [
        "after 1am and before 6am every weekday"
      ],
      "packageRules": [
        {
          "packagePatterns": [
            "eslint",
            "tslint",
            "prettier"
          ],
          "groupName": "eslint & prettier"
        }
      ],
      "lockFileMaintenance": {
        "enabled": true,
        "schedule": [
          "before 9am on the first day of the month"
        ]
      }
    }
  }
}
