{
  "name": "renovate-config-bitworkers",
  "version": "0.0.0-semantically-released",
  "description": "Renovate configuration for Bitworkers",
  "main": "package.json",
  "keywords": [
    "renovate-config"
  ],
  "author": "Bitworkers",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bitworkers-official/renovate-config-bitworkers.git"
  },
  "devDependencies": {
    "semantic-release": "^15.13.3"
  },
  "renovate-config": {
    "default": {
      "extends": [
        "config:base",
      ],
      "timezone": "DE",
      "automerge": true,
      "pinVersions": false,
      "prConcurrentLimit": 1,
      "schedule": [
        "before 6am every weekday"
      ],
      "lockFileMaintenance": {
        "enabled": true,
        "schedule": [
          "before 7am on the first day of the month"
        ]
      }
    }
  }
}
